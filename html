        error: "❌ خطا در دریافت اطلاعات",
        dateLabel: "📅 تاریخ تخمینی:",
        direction: "rtl"
      },
      en: {
        title: "⛏️ Bitcoin Next Halving Countdown",
        currentBlock: "📦 Current Block:",
        happened: "🎉 Halving has occurred!",
        loading: "Loading...",
        error: "❌ Error fetching data",
        dateLabel: "📅 Estimated date:",
