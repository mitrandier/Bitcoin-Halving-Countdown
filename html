    let currentLang = "fa";
    const titleEl = document.getElementById("title");
    const blockEl = document.getElementById("block");
    const countdownEl = document.getElementById("countdown");
    const progressBar = document.getElementById("progress-bar");
    const percentEl = document.getElementById("percent");
    const dateEl = document.getElementById("date");
    const langSelector = document.getElementById("langSelector");

    langSelector.addEventListener("change", () => {
      currentLang = langSelector.value;
      document.body.style.direction = texts[currentLang].direction;
      titleEl.textContent = texts[currentLang].title;
      main();
    });

    async function getBlockHeight() {
      try {
        const res = await fetch("https://mempool.space/api/blocks/tip/height");
        return parseInt(await res.text());
      } catch {
        return null;
      }
    }

    function formatTime(seconds) {
      const days = Math.floor(seconds / (60 * 60 * 24));
      const hours = Math.floor((seconds / 3600) % 24);
      const minutes = Math.floor((seconds / 60) % 60);
      const secs = Math.floor(seconds % 60);
      return `${days}d ${hours}h ${minutes}m ${secs}s`;
    }

    async function main() {
      const t = texts[currentLang];
      blockEl.textContent = t.loading;
      countdownEl.textContent = t.loading;
      const height = await getBlockHeight();
      if (!height) {
        countdownEl.textContent = t.error;
        return;
      }

      const nextHalving = LAST_HALVING_BLOCK + HALVING_INTERVAL;
      const remainingBlocks = nextHalving - height;
      const progress = ((height - LAST_HALVING_BLOCK) / HALVING_INTERVAL) * 100;

      blockEl.textContent = `${t.currentBlock} ${height.toLocaleString()}`;
